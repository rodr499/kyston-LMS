# Copy to .env.local and fill in values.

# Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
# Database: use Supabase Dashboard → Project Settings → Database.
# After resetting password, use "Connection pooling" → URI and click Copy (Session or Transaction).
# No quotes around the value; password with special chars must be URL-encoded (e.g. @ → %40).
DATABASE_URL=

# App
NEXT_PUBLIC_APP_DOMAIN=kyston.org
# Shared OAuth callback base (no tenant subdomain). Dev: http://localhost:3000  Prod: https://kyston.org
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Stripe
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Resend
RESEND_API_KEY=

# Zoom
ZOOM_CLIENT_ID=
ZOOM_CLIENT_SECRET=

# Google (for Google Meet / Calendar)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft (for Teams)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
